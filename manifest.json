{
    "name": "Slack hider",
    "version": "1.0",
    "description": "Hide your slacks to focus and get in the flow. Unhide them whenever you're ready.",
    "manifest_version": 2,

    "browser_action": {
        "default_popup": "popup.html"
      },

    "permissions": [
        "management",
        "storage",
        "tabs"
    ],

    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },

    "content_scripts": [{
        "matches": ["https://app.slack.com/client*"],
        "css": ["styles/inject.css"],
        "js": ["scripts/inject.js"]
    }],

    "web_accessible_resources": [
        "favicon-no-messages.png"
    ]
    

}